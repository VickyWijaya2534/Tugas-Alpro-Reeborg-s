#fungsi belok kanan
def turn_right():
    turn_left()
    turn_left()
    turn_left()

#fungsi melewati dinding
def lewati_dinding():
        turn_left()
        move()
        turn_right()
        move()
        turn_right()
        move()
        turn_left()
        
#sebelum mencapai goal robot akan terus looping
while not at_goal():
    if wall_in_front():
        lewati_dinding()
    else :
        move()
